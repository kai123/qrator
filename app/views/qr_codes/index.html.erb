<p id="notice">
	<h1><%= notice %></h1>
</p>

<div id="main-container-2" class="container">
	<div class="col-md-12">
		<h1>QR Codes <%= link_to '+', new_qr_code_path %> </h1>

		<table class="table table-condensed table-bordered table-striped table-hover">
			<thead>
				<tr>
					<th>Url</th>
					<th>UTM-Src</th>
					<th>UTM-Medium</th>
					<th>UTM-Campaign</th>
					<th>UTM-Content</th>
					<th>UTM-Term</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
			<% @qr_codes.each do |qr_code| %>
				<tr>
					<td><%= qr_code.url %></td>
					<td><%= qr_code.src %></td>
					<td><%= qr_code.medium %></td>
					<td><%= qr_code.campaign %></td>
					<td><%= qr_code.content %></td>
					<td><%= qr_code.term %></td>
					<td>
						<button type="button" class="btn btn-default">
						<%= link_to "Show", qr_code_path(qr_code) %>
							<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
						</button>
					</td>
					<td>
						<button type="button" class="btn btn-default">
						<%= link_to "Edit", edit_qr_code_path(qr_code) %>
							<span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
						</button>
					</td>
					<td>
						<button type="button" class="btn btn-default">
							<%= link_to "Destroy", qr_code, method: :delete, data: { confirm: "Sicher?" }%>
							<span class="glyphicon glyphicon glyphicon-trash" aria-hidden="true"></span>
						</button>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>
