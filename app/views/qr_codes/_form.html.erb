
<%= form_for @qr_code, :html => {:class => "form-horizontal"} do |f| %>
  <% if @qr_code.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@qr_code.errors.count, "error") %> prohibited this qr_code from being saved:</h2>
      <ul>
        <% @qr_code.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="main-container-2" class="container">
    <div class="row">
      <div class="form-group">
        <%= f.label :url, class: 'col-md-3 control-label' %>
        <div class="col-md-6">
          <%= f.text_field :url, class: 'form-control'%>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
    <div class="col-md-6">
        <h3><%= link_to "Optionale UTM-Parameter:", "http://www.seo-trainee.de/utm-parameter/", data: { confirm: "Qrator wirklich verlassen?"} %></h3>
      </div>

      <div class="col-md-12">
        <div class="form-group">
        <%= f.label :src, class: 'col-md-3 control-label' %>
        <div class="col-md-6">
          <%= f.text_field :src, class: 'form-control'%>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
        <%= f.label :medium, class: 'col-md-3 control-label' %>
        <div class="col-md-6">
          <%= f.text_field :medium, class: 'form-control'%>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
        <%= f.label :campaign, class: 'col-md-3 control-label' %>
        <div class="col-md-6">
          <%= f.text_field :campaign, class: 'form-control'%>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
        <%= f.label :content, class: 'col-md-3 control-label' %>
        <div class="col-md-6">
          <%= f.text_field :content, class: 'form-control'%>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
        <%= f.label :term, class: 'col-md-3 control-label' %>
        <div class="col-md-6">
          <%= f.text_field :term, class: 'form-control'%>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
        <div class="col-md-6">
          <button type="submit" name="commit" class="btn btn-primary">QR-Code anzeigen</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

