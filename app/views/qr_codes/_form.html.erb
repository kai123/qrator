<%= form_for(@qr_code) do |f| %>
  <% if @qr_code.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@qr_code.errors.count, "error") %> prohibited this qr_code from being saved:</h2>

      <ul>
      <% @qr_code.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :qrcode %><br>
    <%= f.text_field :qrcode %>
  </div>
  <div class="field">
    <%= f.label :qrlink %><br>
    <%= f.text_field :qrlink %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :src %><br>
    <%= f.text_field :src %>
  </div>
  <div class="field">
    <%= f.label :medium %><br>
    <%= f.text_field :medium %>
  </div>
  <div class="field">
    <%= f.label :campaign %><br>
    <%= f.text_field :campaign %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :term %><br>
    <%= f.text_field :term %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<div id="main-container" class="container">

    <div class="row">
        <div class="col-md-9 col-md-offset-3">
            <h3>QR-Code zu URL erstellen:</h3>
        </div>
            <form role="form" class="form-horizontal">        
                <div class="form-group">
                    <label for="URL" class="col-md-3 control-label">URL</label>
                    <div class="col-md-6">
                        <input type="text" id="url" name="url" class="form-control" />
                    </div>
                </div>


            <div class="col-md-9 col-md-offset-3">
                <h3>Optionale UTM-Parameter:</h3>
            </div>

            <div class="form-group">
                <label for="utm-st" class="col-md-3 control-label">UTM source tag</label>
                <div class="col-md-6">
                    <input type="text" id="utm-st" name="utm-st" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="utm-mt" class="col-md-3 control-label">UTM medium tag</label>
                <div class="col-md-6">
                    <input type="text" id="utm-mt" name="utm-mt" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="utm-st" class="col-md-3 control-label">UTM campaign tag</label>
                <div class="col-md-6">
                    <input type="text" id="utm-ct" name="utm-ct" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="utm-st" class="col-md-3 control-label">UTM content tag</label>
                <div class="col-md-6">
                    <input type="text" id="utm-cont" name="utm-cont" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="utm-st" class="col-md-3 control-label">UTM term tag</label>
                <div class="col-md-6">
                    <input type="text" id="utm-tt" name="utm-tt" class="form-control" />
                </div>
            </div>

             <div class="form-group">
                <div class="col-md-offset-3 col-md-9">                    
                    <button type="button" class="btn btn-primary">QR-Code generieren</button>                    
                </div>
            </div>
        </form>
    </div>    

</div>

