<!DOCTYPE html>
<html>
<head>
	<title>Qrator</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<!-- Icon neben title -->
	<link rel="shortcut icon" type="image/x-icon" href="media/images/favicon.png" />
			<!--[if lt IE 9]>
					<script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
					</script>
					<![endif]-->

</head>
	<body>
		<div id="main-container" class="container">
			<div class="row">
				<div class="col-md-12">
					<nav class="navbar navbar-default">
						<div class="container-fluid">
							<!-- Brand and toggle get grouped for better mobile display -->
							<div class="navbar-header">
								<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
									<span class="sr-only">Toggle navigation</span>
									<span class="icon-bar"></span>
									<span class="icon-bar"></span>
									<span class="icon-bar"></span>
								</button>

								<div class="navbar-brand">
									<%=  link_to 'Qrator', '/' %>
								</div> 

							</div>

							<ul class="nav navbar-nav navbar-right">
								<li><%=  link_to 'Über', ueber_path %></li>
								<li><%=  link_to 'Kontakt', contact_path %></li>  
								<li><%=  link_to 'QR-Codes', index_path %></li>  
							</ul>
						</div>
					</nav>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12">
					<div class="bg">
						<%= yield %>
					</div> 
				</div>      
			</div>

			<div class="row">
				<div class="col-md-12">          
					<footer class="footer">
						<nav class="navbar navbar-default">
							<div class="container-fluid">            
								<ul class="nav navbar-nav navbar-left">
									<li><%=  link_to 'Über', ueber_path %></li>
									<li><%=  link_to 'Kontakt', contact_path %></li> 
									<li><%=  link_to 'Impressum', impressum_path %></li>   
								</ul>
							</div>
						</nav>
					</footer>
				</div>
			</div>
		</div>
	</body>
</html>